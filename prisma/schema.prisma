// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model "Driver Instructions" {
  id                BigInt   @id @default(autoincrement())
  "Driver ID"       String?
  "Route"           String?
  "Run No"          String?
  "Headway Deviation" Float?
  "Delay"           Int?
  "Instruction"     String?
  "Status"          String?
  "Created at"      DateTime?
  "Updated at"      DateTime?

  @@map("Driver Instructions")
}
