// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model DriverInstructions {
  id                BigInt   @id @default(autoincrement())
  driverId          String?
  route             String?
  runNo             String?
  headwayDeviation  Float?
  delay             Int?
  instruction       String?
  status            String?
  createdAt         DateTime?
  updatedAt         DateTime?
}
